class Solution {
public:
    int peopleAwareOfSecret(int n, int delay, int forget) {
        int mod = 1e9+7;
        vector<int> dp(n+1,0);
        dp[1] = 1;
        for(int i =1;i<n+1;i++){
            for(int j =i+delay ;j<=n and  j<i+forget;j++){
                dp[j] = (dp[i]%mod + dp[j]%mod)%mod;
                dp[j] = dp[j]%mod;
            }
            if(i+forget<=n) dp[i]=0; //Remove the person whose time is done 
        }
        int s = 0;
        for(int i =1;i<=n;i++){
            s = s + (dp[i])%mod;
            s=s%mod;
        }
        return s;
    }
};
